# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fotomono

# Better Auth
BETTER_AUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:3001

# Supabase (if using Supabase PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=fotomono-storage
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# AWS S3 (optional - alternative to R2)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fotomono-storage

# Google Drive (optional - for storage)
GOOGLE_DRIVE_CLIENT_ID=your-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/api/auth/google-drive/callback

# Upstash Redis (for caching and job queue)
UPSTASH_REDIS_URL=https://your-redis.upstash.io
UPSTASH_REDIS_TOKEN=your-token

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-auth-token

# Email (Phase 2 - SendGrid or Resend)
# SENDGRID_API_KEY=your-sendgrid-key
# RESEND_API_KEY=your-resend-key
# EMAIL_FROM=noreply@fotomono.com

# AI (Optional - for image tagging/analysis)
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-key