{
  "name": "fotomono",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.8.2",
      "@trpc/server": "^11.5.0",
      "better-auth": "^1.3.28",
      "ai": "^5.0.49",
      "@ai-sdk/google": "^2.0.13",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "@trpc/client": "^11.5.0",
      "drizzle-orm": "^0.44.2"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @fotomono/db db:push",
    "db:studio": "turbo -F @fotomono/db db:studio",
    "db:generate": "turbo -F @fotomono/db db:generate",
    "db:migrate": "turbo -F @fotomono/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.4",
    "ultracite": "6.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsdown": "^0.15.5",
    "@types/bun": "^1.2.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.0"
}
